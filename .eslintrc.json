{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "meteor"],
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb", "plugin:meteor/recommended"],
  "rules": {
    "indent": ["error", 2],
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ],
    "no-unused-expressions": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "arrow-body-style": 0
  }
}
